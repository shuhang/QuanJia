#define createSingleton(ServiceName)\
+(instancetype)shareInstance{\
static ServiceName *instance = nil;\
static dispatch_once_t onceToken;\
dispatch_once(&onceToken, ^{\
instance = [self new];\
});\
return instance;\
}

